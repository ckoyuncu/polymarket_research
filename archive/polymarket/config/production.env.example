# Production Environment Configuration
# Copy this file to .env and customize

# ============================================
# TRADING CONFIGURATION
# ============================================

# Starting capital in USD
INITIAL_CAPITAL=300

# Maximum position size in USD
MAX_POSITION_SIZE=50

# Daily loss limit (percentage of capital)
DAILY_LOSS_LIMIT=0.10

# Polling interval in seconds
POLL_INTERVAL=10

# ============================================
# TARGET WALLETS
# ============================================

# Comma-separated list of wallets to monitor
# Can be addresses or usernames
TARGET_WALLETS=0x589222a5124a96765443b97a3498d89ffd824ad2,Account88888

# ============================================
# NOTIFICATIONS
# ============================================

# Enable desktop notifications (true/false)
ENABLE_DESKTOP_ALERTS=true

# Discord webhook URL (optional)
DISCORD_WEBHOOK_URL=

# Slack webhook URL (optional)
SLACK_WEBHOOK_URL=

# ============================================
# API CREDENTIALS (for live trading)
# ============================================

# Polymarket API Key (required for live trading)
POLYMARKET_API_KEY=

# Polymarket API Secret (required for live trading)
POLYMARKET_API_SECRET=

# Private key for signing (required for live trading)
# NEVER COMMIT THIS FILE WITH REAL CREDENTIALS
PRIVATE_KEY=

# ============================================
# DATABASE
# ============================================

# Database path (relative to project root)
DB_PATH=data/alpha.db

# ============================================
# RISK CONTROLS
# ============================================

# Maximum open positions at once
MAX_OPEN_POSITIONS=5

# Maximum total exposure (percentage of capital)
MAX_TOTAL_EXPOSURE=0.50

# Stop after N consecutive losses
CONSECUTIVE_LOSS_LIMIT=5

# Maximum age of position in hours before auto-close
MAX_POSITION_AGE_HOURS=1.0

# ============================================
# LOGGING
# ============================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Log directory
LOG_DIR=logs
