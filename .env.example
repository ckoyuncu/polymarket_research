# Hyperliquid Credentials (OPTIONAL for Phase 1-2, required for Phase 3 live testing)
# Your wallet private key (hex string, with or without 0x prefix)
# Get from: Create new wallet or export from existing
HYPERLIQUID_PRIVATE_KEY=

# Network Configuration
# true = testnet (safe for testing), false = mainnet (real money)
HYPERLIQUID_MAINNET=false

# Trading Configuration
TRADING_MODE=paper              # paper (simulated) or live

# Risk Management
MAX_POSITION_SIZE=1000          # Max notional per position (USD)
MAX_TOTAL_EXPOSURE=5000         # Max total notional across positions
MAX_DAILY_LOSS=100              # Stop trading if daily loss exceeds this
MAX_TRADES_PER_DAY=50           # Max trades per day
MAX_OPEN_POSITIONS=5            # Max concurrent positions

# Position Sizing
POSITION_SIZE_METHOD=volatility # fixed, percent_equity, volatility, kelly
MAX_POSITION_PCT=0.10           # Max 10% of equity per position
MAX_RISK_PER_TRADE_PCT=0.02     # Max 2% risk per trade

# Logging
LOG_LEVEL=INFO                  # DEBUG, INFO, WARNING, ERROR
LOG_DIR=logs

# Optional: Notifications
# DISCORD_WEBHOOK_URL=

# Note: The system will run in MOCK MODE if HYPERLIQUID_PRIVATE_KEY is not set.
# This is safe and allows development/testing without real credentials.
